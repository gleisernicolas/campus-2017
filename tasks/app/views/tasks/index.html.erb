<div class="container">
  <table class='table table-bordered'>
    <thead>
      <tr>
        <th>Task</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |t| %>
        <tr>
          <td><%= link_to t.name, t %></td>
          <td><%= link_to "Edit", edit_task_path(t), class: "btn btn-primary btn-sm"%>  <%= link_to "Delete", task_path(t),  method: "delete", class: "btn btn-danger btn-sm"%> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%= link_to "Criar nova", new_task_path, class: "btn btn-default btn-sm" %>
</div>
